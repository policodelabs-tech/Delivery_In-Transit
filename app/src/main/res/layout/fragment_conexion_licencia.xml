<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="32dp"
    android:background="@drawable/gradient_background_teal"
    tools:context=".ui.negocioconexion.ConexionLicenciaFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Crea conexión a negocio"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Necesitamos que a continuación ingreses el código de la licencia de negocio al que te estas registrando"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:layout_marginBottom="48dp" />

    <EditText
        android:id="@+id/etCodigoLicencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Inserta código de licencia:"
        android:background="@drawable/edit_text_rounded_white"
        android:padding="16dp"
        android:textColor="@android:color/black"
        android:textColorHint="#888888"
        android:inputType="textCapCharacters"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnRegistrarLicencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Regístrate"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:backgroundTint="#0D47A1" />

</LinearLayout>